# RAWS MCP Server Configuration

# API Tokens
# Get your Synoptic API token from: https://synopticdata.com/
SYNOPTIC_API_TOKEN=your_synoptic_token_here

# MesoWest uses similar API, get token from: https://mesowest.utah.edu/
MESOWEST_API_TOKEN=your_mesowest_token_here

# Server Configuration
LOG_LEVEL=info
CACHE_TTL_SECONDS=300

# Feature Flags
ENABLE_NWS_INTEGRATION=true
ENABLE_FIRE_INDICES=true

# Optional: Custom cache settings
# CACHE_MAX_SIZE=1000
# CACHE_CLEANUP_INTERVAL=600

# Optional: API rate limiting
# MAX_REQUESTS_PER_MINUTE=100
